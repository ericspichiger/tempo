{% extends 'base.html.twig' %}

{% block body %}
    
    {% for message in app.flashes('success') %}
        <div class="success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="error">{{ message }}</div>
    {% endfor %}

    <div class="pageTitle">
        Liste des collaborateurs Temporela
    </div>
    
    <a href="{{ path('addcollaborateur') }}"><input type="button" value="Ajouter un collaborateur"></a>
       
        
    <table id="listCollabo-table" cellspacing="0" width="100%" class="display list_table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Modifier</th>
                <th>Supprimer</th>
                <th>Voir temps passé</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Modifier</th>
                <th>Supprimer</th>
                <th>Voir temps passé</th>
            </tr>
        </tfoot>      
            <tbody>
        {% for Collabo in listCollabo %}  
                <tr>
                    <td>{{ Collabo.id }}</td>
                    <td>{{ Collabo.nom }}</td>
                    <td>{{ Collabo.prenom }}</td>
                    <td><a href="{{ path('modcollaborateur', {'id':Collabo.id}) }}">Modifier</a></td>
                    <td><a class="confirmation" href="{{ path('delcollaborateur', {'id':Collabo.id}) }}">Supprimer</a></td>
                    <td>X</td>
                </tr>
        {% endfor %}
            </tbody>
    
    </table>            
            
                 
{% endblock %}

{% block javascripts %}
    <script>
        $('.confirmation').on('click', function () {
        return confirm('Êtes vous sûr ?');
    });
    </script>
{% endblock %} 