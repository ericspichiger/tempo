{% extends 'base.html.twig' %}

{% block body %}
    
    {% for message in app.flashes('success') %}
        <div class="success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="error">{{ message }}</div>
    {% endfor %}

    <div class="pageTitle">
        Liste des Dossiers Temporela
    </div>
    
    <a href="{{ path('adddossier') }}"><input type="button" value="Ajouter un dossier"></a>
             
    <table id="listDossier-table" cellspacing="0" width="100%" class="display list_table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Numéro</th>
                <th>Nom</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Numéro</th>
                <th>Nom</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </tfoot>      
            <tbody>
        {% for Dossier in listDossier %}  
                <tr>
                    <td>{{ Dossier.id }}</td>
                    <td>{{ Dossier.numero }}</td>
                    <td>{{ Dossier.nom }}</td>
                    <td><a href="{{ path('moddossier', {'id':Dossier.id}) }}">Modifier</a></td>
                    <td><a class="confirmation" href="{{ path('deldossier', {'id':Dossier.id}) }}">Supprimer</a></td>
                </tr>
        {% endfor %}
            </tbody>    
    </table>       
            
            
                 
{% endblock %}
    