{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% if error %}
    <article class="message is-danger">
        <div class="message-body">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    </article>
    {% endif %}

    {% if app.user %}
    <article class="message is-primary">
        <div class="message-body">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
    </article>
    {% endif %}
    <section class="hero">
        <div class="hero-body">
            <div class="container">
                <h1 class="title is-1">
                    Log in !
                </h1>
            </div>
        </div>
    </section>
    <form method="post">
        <div class="field">
            <label class="label" for="inputEmail">
                Email
            </label>
            <div class="control">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input" placeholder="Email" required autofocus>
            </div>
        </div>
        <div class="field">
            <label for="inputPassword" class="label">
                Password
            </label>
            <div class="control">
                <input type="password" name="password" id="inputPassword" class="input" placeholder="Password" required>
            </div>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="checkbox">
            <label>
                <input class="checkbox" type="checkbox" name="_remember_me" /> <span>Remember me</span>
            </label>
        </div>
        <div class="field is-grouped">
            <div class="control">
                <button class="button is-link" type="submit">
                    Sign in
                </button>
            </div>
        </div>
    </form>
    <div>
        <a  href="{{ path('app_ask_reset_password') }}">Forgotten password</a>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
