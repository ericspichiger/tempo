{% extends 'base.html.twig' %}

{% block body %}
    
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="success">{{ flashMessage }}</div>
    {% endfor %}

    <div class="pageTitle">
        {{ 'Users List'|trans }}
    </div>
        
    <table id="listUsers-table" cellspacing="0" width="100%" class="display list_table">
        <thead>
            <tr>
                <th>{{ 'name'|trans }}</th>
                <th>Email</th>
                <th>{{ 'role'|trans }}</th>
                <th>{{ 'status'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for User in users %}
            <tr>
                <td>{{ User.username }}</td>
                <td>{{ User.email }}</td>
                <td>
                    {% set break = false %}
                    {% for role in User.roles if not break %}
                    {{ role }}
                    {% set break = true %}
                    {% endfor %}
                    <a href="{{ path('promoteuser', { 'id': User.id }) }}">&uarr;</a>
                    <a href="{{ path('demoteuser', { 'id': User.id }) }}">&darr;</a>
                </td>
                <td>
                    <a href="{{ path('activateuser', { 'id': User.id }) }}">
                        {% if User.enabled == 1 %}
                            Actif
                        {% else %}
                            Inactif
                        {% endif %}
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            
    <p><a href="{{ path('fos_user_registration_register')|trans }}"><input type="button" value="{{ 'Add a user'|trans }}"></a></p>
                   
{% endblock %}
